@model Brewery_Tracker.ViewModels.Home.BreweryListViewModel

@{
    ViewBag.Title = "Breweries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero is-dark">
    <div class="hero-body">
        <div class="container">
            <h1 class="title name-font brand">
                Breweries
            </h1>
            <h2 class="subtitle">
                Check out this list of breweries, select which ones you've been to, and which ones are your favorites!

            </h2>
        </div>
    </div>
</section>

<div class="container top-bot-space">
    <div class="columns is-centered">
        <div class="column">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        @*<th>Brewery</th>
                        <th>State</th>
                        <th>Rating</th>*@
                    </tr>
                </thead>

                <tbody>
                    @foreach (var brewery in Model.BreweryList)
                    {
                        <tr>
                            <td>@brewery.Brewery_ID</td>
                            @*<td>@brewery.Brewery_Name</td>
                            <td>@brewery.Brewery_State</td>
                            <td>@brewery.Brewery_Rating</td>*@
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


<div class="column">
    <div class="column is-half">
        @Html.ListBox("breweryList", Model.BreweryList)
    </div>
</div>

<div class="columns">
    <div class="column">
        <h2>Top Rated Brewery</h2>

        <dl>
            <dt>ID</dt>
            <dd>@Model.TopRatedBrewery.Brewery_ID</dd>

            <dt>Name</dt>
            <dd>@Model.TopRatedBrewery.Brewery_Name</dd>

            <dt>State</dt>
            <dd>@Model.TopRatedBrewery.Brewery_State</dd>

            <dt>Rating</dt>
            <dd>@Model.TopRatedBrewery.Brewery_Rating</dd>
        </dl>

    </div>
</div>

