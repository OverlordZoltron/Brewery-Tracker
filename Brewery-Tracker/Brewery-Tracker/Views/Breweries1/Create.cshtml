@model Brewery_Tracker.Models.Brewery

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero is-dark">
    <div class="hero-body">
        <div class="container">
            <h1 class="title name-font brand">
                Add a new Brewery!
            </h1>
        </div>
    </div>
</section>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="columns is-centered">
        <div class="column is-4">


            <div class="card top-bot-space">
                <header class="card-header">
                        <p class="card-header-title">
                            Add a cool new, or an old favorite brewery here!
                        </p>
                    </header>
                <div class="card-content">
                    <div class="content">

                        <!-- CREATE BREWERY FORM-->
                        <form>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="field">
                                <label class="label">Brewery Name</label>
                                <div class="control">
                                    @Html.EditorFor(model => model.Brewery_Name, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Brewery_Name, "", new { @class = "help is-danger" })
                                </div>
                            </div>

                            <div class="field">
                                <label class="label">Brewery Description</label>
                                <div class="control">
                                    @Html.EditorFor(model => model.Brewery_Description, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Brewery_Description, "", new { @class = "help is-danger" })
                                </div>
                            </div>

                            <div class="field">
                                <label class="label">Brewery Address</label>
                                <div class="control">
                                    @Html.EditorFor(model => model.Brewery_Address, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Brewery_Address, "", new { @class = "help is-danger" })
                                </div>
                            </div>

                            <div class="field">
                                <label class="label">Brewery City</label>
                                <div class="control">
                                    @Html.EditorFor(model => model.Brewery_City, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Brewery_City, "", new { @class = "help is-danger" })
                                </div>
                            </div>

                            <div class="field">
                                <label class="label">Brewery State</label>
                                <div class="control">
                                    @Html.EditorFor(model => model.Brewery_State, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Brewery_State, "", new { @class = "help is-danger" })
                                </div>
                            </div>

                            <div class="field">
                                <label class="label">Brewery Zip</label>
                                <div class="control">
                                    @Html.EditorFor(model => model.Brewery_Zip, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Brewery_Zip, "", new { @class = "help is-danger" })
                                </div>
                            </div>

                            <div class="field">
                                <label class="label">Brewery Rating</label>
                                <div class="control">
                                    @Html.EditorFor(model => model.Brewery_Rating, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Brewery_Rating, "", new { @class = "help is-danger" })
                                </div>
                            </div>

                            <div class="field is-grouped is-grouped-right">
                                <div class="control">
                                    <button class="button is-link">Create</button>
                                </div>
                            </div>

                        </form>
                        <!-- END CREATE BREWERY FORM -->

                    </div>
                </div>
            </div>

        </div>
    </div>
}
